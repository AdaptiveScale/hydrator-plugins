{
  "metadata": {
    "spec-version": "1.5",
    "label": "Group by Aggregator"
  },
  "display-name" : "Group By",
  "configuration-groups": [
    {
      "label": "General",
      "properties": [
        {
          "widget-type": "csv",
          "label": "Group by fields",
          "name": "groupByFields",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Field Name"
          },
          "plugin-function": {
            "method": "POST",
            "widget": "outputSchema",
            "output-property": "schema",
            "plugin-method": "outputSchema",
            "required-fields": ["groupByFields", "aggregates"],
            "missing-required-fields-message": "'Group By Fields' & 'Aggregates' properties are required to fetch schema."
          }
        },
        {
          "widget-type": "csv",
          "label": "Aggregates",
          "name": "aggregates",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Aggregate (ex: total:sum(price))"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Number of Partitions",
          "name": "numPartitions"
        }
      ]
    }
  ],
  "outputs": []
}
