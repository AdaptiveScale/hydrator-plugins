{
  "id": "DB",
  "groups" : {
    "position": [ "group1", "group2", "group3" ],
    "group1": {
      "display" : "General",
      "position" : [ "user", "password", "tableName" ],
      "fields" : {
        "user" : {
          "widget": "textbox",
          "label": "Username"
        },

        "password" : {
          "widget": "password",
          "label": "Password"
        },

        "tableName" : {
          "widget": "textbox",
          "label" : "Table Name"
        }
      }
    },
    "group2": {
      "display" : "JDBC Information",
      "position" : [ "jdbcPluginName", "jdbcPluginType", "driverClass", "connectionString" ],
      "fields" : {
        "jdbcPluginName" : {
          "widget": "textbox",
          "label": "Plugin Name"
        },

        "jdbcPluginType" : {
          "widget": "textbox",
          "label": "Plugin Type"
        },

        "driverClass" : {
          "widget": "textbox",
          "label": "Driver Class"
        },

        "connectionString" : {
          "widget": "textbox",
          "label" : "Connection String"
        }
      }
    },
    "group3": {
      "display" : "Table Properties",
      "position" : [ "importQuery", "boundingQuery", "splitBy", "columns" ],
      "fields" : {
        "importQuery" : {
          "widget": "textbox",
          "label": "Import SQL"
        },
        "boundingQuery" : {
          "widget": "textbox",
          "label": "Count SQL"
        },
	"splitBy" : {
	  "widget": "textbox",
	  "label" : "Field to Split by"
	},
        "columns": {
          "widget": "csv",
          "label": "Columns",
          "properties": {
            "delimiter": ","
          }
        }
      }
    }
  }
}
