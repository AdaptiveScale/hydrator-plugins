{
  "metadata": {
    "spec-version": "1.3"
  },
  "configuration-groups": [
    {
      "label": "Kafka Configuration",
      "properties": [
        {
          "widget-type": "csv",
          "label": "Kafka Brokers",
          "name": "brokers",
          "widget-attributes": {
            "delimiter": ","
          }
        },
        {
          "widget-type": "csv",
          "label": "Kafka Topics",
          "name": "topics",
          "widget-attributes": {
            "delimiter": ","
          }
        }
      ]
    },
    {
      "label": "Format",
      "properties": [
        {
          "widget-type": "select",
          "label": "Format",
          "name": "format",
          "widget-attributes": {
            "values": [
              "",
              "avro",
              "binary",
              "clf",
              "csv",
              "grok",
              "syslog",
              "text",
              "tsv"
            ],
            "default": ""
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "default-schema": {
          "name": "etlSchemaBody",
          "type": "record",
          "fields": [
            {
              "name": "key",
              "type": ["string", "null"]
            },
            {
              "name": "message",
              "type": "bytes"
            }
          ]
        },
        "schema-default-type": "string",
        "property-watch": "format"
      }
    }
  ]
}
