{
  "id": "MongoDB",
  "groups" : {
    "position": [ "group1" ],
    "group1": {
      "display" : "MongoDB Configuration",
      "position" : [ "connectionString", "authConnectionString", "schema", "inputQuery", "inputFields", "splitterClass" ],
      "fields" : {
        "connectionString": {
          "widget": "textbox",
          "label": "Connection String",
          "properties": {
            "width": "large"
          }
        },
        "authConnectionString": {
          "widget": "textbox",
          "label": "Authentication Connection String",
          "properties": {
            "width": "large"
          }
        },
        "inputQuery" : {
          "widget": "textbox",
          "label": "Query",
          "properties": {
            "width":"large"
          }
        },
        "inputFields": {
          "widget": "textbox",
          "label": "Index",
          "properties": {
            "width": "medium"
          }
        },
        "splitterClass": {
          "widget": "textbox",
          "label": "Splitter Class",
          "properties": {
            "width": "medium"
          }
        }
      }
    }
  },
  "outputschema": {
    "schema" : {
      "widget": "schema",
      "schema-types" : [ "boolean", "int", "long", "float", "double", "bytes", "string" ],
      "schema-default-type" : "string",
      "property-watch": "format"
    }
  }
}
