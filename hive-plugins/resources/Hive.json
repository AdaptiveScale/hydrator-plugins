{
  "id": "Hive",
  "groups" : {
    "position": [ "group1" ],
    "group1": {
      "display" : "Hive Configuration",
      "position" : [ "metastoreURI", "databaseName", "tableName", "filter"],
      "fields" : {
        "metastoreURI": {
          "widget": "textbox",
          "label": "Hive Metastore URI",
          "properties": {
            "width": "large"
          }
        },
        "databaseName": {
          "widget": "textbox",
          "label": "Hive Database Name",
          "properties": {
            "width": "large"
          }
        },
        "tableName": {
          "widget": "textbox",
          "label": "Hive Table Name",
          "properties": {
            "width": "medium"
          }
        },
        "filter" : {
          "widget": "textbox",
          "label": "Hive Partition Filter",
          "properties": {
            "width": "large"
          }
        }
      }
    }
  },
  "outputschema": {
    "schema" : {
      "widget": "schema",
      "schema-types" : [ "boolean", "int", "long", "float", "double", "bytes", "string"],
      "schema-default-type" : "string"
    }
  }
}
