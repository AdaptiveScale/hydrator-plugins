{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "HBase Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "HBase Table Name",
          "name": "tableName",
          "widget-attributes": {
            "width": "large"
          }
        },
        {
          "widget-type": "textbox",
          "label": "HBase Column Family",
          "name": "columnFamily",
          "widget-attributes": {
            "width": "large"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Zookeeper Quorum String",
          "name": "zkQuorum",
          "widget-attributes": {
            "width": "large"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Zookeeper Client Port",
          "name": "zkClientPort",
          "widget-attributes": {
            "width": "medium"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Row Field Name",
          "name": "rowField",
          "widget-attributes": {
            "width": "medium"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "label": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string",
          "map<string, string>"
        ],
        "schema-default-type": "string"
      }
    }
  ]
}