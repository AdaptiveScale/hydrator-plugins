{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "Elasticsearch Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Elasticsearch Host",
          "name": "es.host",
          "widget-attributes": {
            "width": "large"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Index",
          "name": "es.index",
          "widget-attributes": {
            "width": "medium"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Type",
          "name": "es.type",
          "widget-attributes": {
            "width": "medium"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Query",
          "name": "query",
          "widget-attributes": {
            "width": "large"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "label": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string"
        ],
        "schema-default-type": "string",
        "property-watch": "format"
      }
    }
  ]
}